
package Sensores;

public class Fecha {
    private int dia;
    private int mes;
    private int año;
    
    public Fecha(int dia, int mes, int año){
        this.dia=dia;
        this.mes=mes;
        this.año=año;
    }
    
    //Métodos de comparación de la fecha con rangos asignados
    
    public boolean antesFecha(Fecha f){
        if(año<f.getAño()||(año==f.getAño()&& mes<f.getMes())||(año==f.getAño()&&mes==f.getMes()
                && dia<f.getDia())){
            return true;
        }
        
        return false;
    }
    
    public boolean despuesFecha(Fecha f){
        if(año>f.getAño()||(año==f.getAño()&& mes>f.getMes())||(año==f.getAño()&&mes==f.getMes()
                && dia>f.getDia())){
            return true;
        }
        return false;
    }
    
    //Getters
    public int getDia(){
        return dia;
    }
    
    public int getMes(){
        return mes;
    }
    
    public int getAño(){
        return año;
    }
    
    @Override
    public String toString(){
        return dia+"/"+mes+"/"+año;
    }
}
